@page "{id:int}"
@model RazorNet.Pages.Person.Delete

@{
    ViewData["Title"] = "Usuń Osobę";
}

<h1 class="text-center my-4 text-danger">Usuń Osobę</h1>

<div class="card border-danger shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <div class="alert alert-danger text-center">
            <p class="mb-2">Czy na pewno chcesz usunąć tę osobę?</p>
            <p class="fw-bold">@Model.Person.FirstName @Model.Person.LastName</p>
        </div>

        <form method="post" class="d-flex justify-content-center gap-3">
            <input type="hidden" asp-for="Person.Id" />
            <button type="submit" class="btn btn-danger px-4">Usuń</button>
            <a asp-page="/Person/Index" class="btn btn-secondary px-4">Anuluj</a>
        </form>
    </div>
</div>
